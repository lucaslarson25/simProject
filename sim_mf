# Define compiler and flags
CC = gcc
DEBUG = -g
LFLAGS = -Wall -std=c99 -pedantic $(DEBUG)

# Define the target executable file
TARGET = sim

# Define the object files
OBJ = sim_main.o

$(TARGET): $(OBJ)
	$(CC) $(LFLAGS) $(OBJ) -o $(TARGET)

%.o: %.c
	$(CC) $(LFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ) $(TARGET)

run: $(TARGET)
	./$(TARGET)